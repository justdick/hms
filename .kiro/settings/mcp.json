{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ],
      "disabled": true,
      "autoApprove": [
        "browser_navigate",
        "browser_fill_form",
        "browser_click",
        "browser_wait_for",
        "browser_type",
        "browser_evaluate",
        "browser_snapshot",
        "browser_resize",
        "browser_take_screenshot",
        "browser_network_requests",
        "browser_console_messages",
        "browser_press_key",
        "browser_close"
      ]
    },
    "laravel-boost": {
        "command": "php",
        "args": [
            "artisan",
            "boost:mcp"
        ]
    },
    "shadcn": {
      "command": "npx",
      "args": [
        "shadcn@latest",
        "mcp"
      ]
    }
  }
}
