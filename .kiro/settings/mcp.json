{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ],
      "disabled": false,
      "autoApprove": [
        "browser_navigate",
        "browser_fill_form",
        "browser_click",
        "browser_wait_for",
        "browser_type",
        "browser_evaluate",
        "browser_snapshot",
        "browser_resize",
        "browser_take_screenshot",
        "browser_network_requests",
        "browser_console_messages",
        "browser_press_key",
        "browser_close",
        "browser_run_code"
      ]
    },
    "laravel-boost": {
      "command": "php",
      "args": [
        "artisan",
        "boost:mcp"
      ],
      "disabled": false,
      "autoApprove": [
        "database-query",
        "tinker",
        "database-schema",
        "application-info",
        "list-routes",
        "last-error",
        "get-absolute-url",
        "browser-logs",
        "read-log-entries",
        "get-config",
        "search-docs",
        "list-artisan-commands",
        "database-connections"
      ]
    },
    "shadcn": {
      "command": "npx",
      "args": [
        "shadcn@latest",
        "mcp"
      ],
      "disabled": false,
      "autoApprove": [
        "view_items_in_registries",
        "get_add_command_for_items"
      ]
    }
  }
}